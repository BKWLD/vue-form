// Default vars
form-default-red = #ec1c23
form-default-blue = #2250F4

// Text Colors (all fields)
form-color-base ?= black
form-color-placeholder ?= rgba(form-color-base, 0.5)
form-color-hover ?= form-color-base
form-color-focus ?= form-color-base
form-color-error ?= form-default-red
form-color-error-hover ?= form-color-error
form-color-error-focus ?= form-color-error
form-color-selected ?= white // Must be legible with 'form-bkg-selected'
form-label-base ?= black

// Modifiers
form-hover-darken-factor ?= 10%
form-focus-darken-factor ?= 15%

// Background Colors (all fields)
form-bkg-base ?= transparent
form-bkg-hover ?= darken(form-bkg-base, form-hover-darken-factor)
form-bkg-focus ?= darken(form-bkg-base, form-focus-darken-factor)
form-bkg-error ?= form-bkg-base
form-bkg-error-hover ?= darken(form-bkg-error, form-hover-darken-factor)
form-bkg-error-focus ?= darken(form-bkg-error, form-focus-darken-factor)
form-bkg-selected ?= form-default-blue // Bkg when checkbox is checked, radio is selected, toggle is on.

// Outline Colors (all fields)
form-outline-base ?= form-color-base
form-outline-hover ?= darken(form-outline-base, form-hover-darken-factor)
form-outline-focus ?= form-color-focus
form-outline-error ?= form-color-error
form-outline-error-hover ?= form-outline-error
form-outline-error-focus ?= form-outline-error

// Outline Style (all fields)
form-outline-width ?= 1px
form-outline-offset ?= 0px

// Animation (all fields)
form-base-speed ?= 200ms
form-easing-function ?= ease-out-quint

// Input & select fields
form-input-height ?= 60px
form-input-height-min ?= 50px
form-input-padding-h ?= 15px
form-input-padding-h-min ?= 12px
form-input-radius ?= 8px
form-input-label-above-padding ?= 5px // Padding between ".vf-label-above" and the input below it

// Checkbox
form-checkbox-size ?= 30px
form-checkbox-radius ?= form-input-radius / 3

// Tooltip
form-tooltip-btn-w ?= 20px // Button size
form-tooltip-popup-offset ?= 20px // Distance between the button and the popup
form-tooltip-z-index = 10 // So the tooltip popup stacks on top of nearby position:sticky elements
