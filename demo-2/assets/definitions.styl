/**
 * Vars
 */

// Vars stored in JSON for sharing with JS
json('vars/breakpoints.json')
json('vars/dimensions.json')
json('vars/colors.json')

// Color
primary-color = sunshine-yellow
black = slate
hover-darken-factor = 3%

// Whitespace
gutter = 60px
gutter-mobile = 20px
max-w-small = 750px + gutter * 2
max-w-medium = 1060px + gutter * 2
max-w = 1280px + gutter * 2
max-w-wide = 1440px
max-w-full = 2560px

// Header config
header-z = 10

// Button sizing
btn-desktop-h = 40px
btn-mobile-h = 36px
btn-small-h = 30px
btn-pad-h = 30px
btn-pad-h-min = 30px
btn-pad-h-small = 20px

// Typography
body-font-size = 16px
body-font-size-min = 14px
body-line-height = 1.4
font-weight-light()
	font-weight 200
font-weight-normal()
	font-weight 400
font-weight-bold()
	font-weight 700

// Spacing
spacing-xl = 120px
spacing-xl-min = spacing-xl * 0.5
spacing-l = 90px
spacing-l-min = spacing-l * 0.6
spacing-m = 45px
spacing-m-min = spacing-m * 0.7
spacing-s = 30px
spacing-s-min = spacing-s * 0.8
spacing-xs = 15px
spacing-xs-min = spacing-xs * 0.9

/**
 * Vendor
 */

// The Bukwild shared stylus library
support-for-ie = false // Don't generate px values with rem function
body-font-size = 16px
@import '~bukwild-stylus-library'

// Media queries
// "Down" Breakpoints
desktop-down()
	@media(max-width desktop - 1px)
		{block}
tablet-landscape-down()
	@media(max-width tablet-landscape - 1px)
		{block}
tablet-down()
	@media(max-width tablet - 1px)
		{block}
mobile-landscape-down()
	@media(max-width mobile-landscape - 1px)
		{block}
mobile-down()
	@media(max-width mobile - 1px)
		{block}
max-w-inner-down()
	@media(max-width (max-w-inner + gutter + gutter))
		{block}
// "Up" Breakpoints
desktop-up()
	@media(min-width desktop)
		{block}
tablet-landscape-up()
	@media(min-width tablet-landscape)
		{block}
tablet-up()
	@media(min-width tablet)
		{block}
mobile-landscape-up()
	@media(min-width mobile-landscape)
		{block}
mobile-up()
	@media(min-width mobile)
		{block}


/**
 * Functions
 */

// Set font styles shorthand
fluid-font(style,
	max-size = null,
	min-size = null,
	color = null,
	max-break = null,
	min-break = 375)

	// Font style switch statement.
	if style == 'body'
		font-family 'Open Sans', sans-serif
		letter-spacing -0.01em
		font-weight 400
	if style == 'serif'
		font-family 'EB Garamond', serif
		letter-spacing -0.01em
		font-weight 400

	// Set font-size
	fluid font-size, max-size, min-size, max-break, min-break

	// Set color, if provided
	if color
		color color

// Style guide styles. The line-height fractions are based on the brand
// style guidelines
style-h1()
	// fluid-font 'serif', 72, 50
	fluid-font 'serif', 80, 60
	font-weight-bold()
	letter-spacing -0.02em
	line-height (140/150)
style-h2()
	fluid-font 'serif', 44, 26
	font-weight-bold()
	// font-style italic
	// letter-spacing -0.04em
	line-height (100/100)
style-h3()
	// fluid-font 'body', 30, 24
	fluid-font 'serif', 24, 22
	font-weight-light()
	font-style italic
	line-height (54/50)
	// letter-spacing -0.02em
style-h4()
	fluid-font 'body', 22, 20
	line-height body-line-height
style-h5()
	fluid-font 'body', 18, 16
	line-height body-line-height
style-body()
	fluid-font 'body', body-font-size, body-font-size-min
	line-height body-line-height
	letter-spacing 0.0em

// Shorthand for making fluid spacing
fluid-space(property, size, negative = false)
	mod = negative ? -1 : 1
	fluid property,
		mod * lookup('spacing-'+size),
		mod * lookup('spacing-'+size+'-min')
